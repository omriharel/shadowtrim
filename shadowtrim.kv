#:kivy 1.10.1

<NavSliders>:
    slider_a: slider_a
    slider_b: slider_b
    label_a: label_a
    label_b: label_b
    
    BoxLayout:
        pos: root.pos
        size: root.size
        orientation: 'horizontal'
        Label:
            size_hint_x: 0.08
            id: label_a
            text: 'null'
        BoxLayout:
            pos: self.pos
            size: self.size
            size_hint_x: 0.84
            orientation: 'vertical'
            Slider:
                size_hint_y: 0.5
                id: slider_a
                disabled: True
            Slider:
                size_hint_y: 0.5
                id: slider_b
                disabled: True
        Label:
            size_hint_x: 0.08
            id: label_b
            text: 'null'

<SourceFile>:
    BoxLayout:
        canvas.before:
            Color:

                rgba: 0.15, 0.15, 0.1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        pos: root.pos
        size: root.size
        orientation: 'horizontal'
        padding: 8, 3, 3, 3
        BoxLayout:
            orientation: 'vertical'
            Label:
                size_hint_y: None
                height: 22
                font_size: 17.5
                text_size: self.size
                halign: 'left'
                color: 0.078, 0.470, 1, 1
                text: root.filename
            BoxLayout:
                orientation: 'horizontal'
                spacing: 3
                padding: 3, 1, 3, 1
                BoxLayout:
                    size_hint_x: 0.25
                    orientation: 'vertical'
                    Label:
                        font_size: 9.5
                        text_size: self.size
                        halign: 'left'
                        color: 0.984, 0.988, 0.670, 1
                        text: 'Duration'
                    Label:
                        pos_hint: {'y': 0.33}
                        font_size: 12
                        text_size: self.size
                        halign: 'left'
                        color: 0.984, 0.988, 0.670, 1
                        text: root.duration
                BoxLayout:
                    size_hint_x: 0.3
                    orientation: 'vertical'
                    Label:
                        font_size: 9.5
                        text_size: self.size
                        halign: 'left'
                        color: 0.988, 0.870, 0.670, 1
                        text: 'Size'
                    Label:
                        pos_hint: {'y': 0.33}
                        font_size: 12
                        text_size: self.size
                        halign: 'left'
                        color: 0.988, 0.870, 0.670, 1
                        text: str(root.filesize)[:5] + ' GB'
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        font_size: 9.5
                        text_size: self.size
                        halign: 'left'
                        color: 0.823, 0.988, 0.670, 1
                        text: 'Datetime'
                    Label:
                        pos_hint: {'y': 0.33}
                        font_size: 12
                        text_size: self.size
                        halign: 'left'
                        color: 0.823, 0.988, 0.670, 1
                        text: root.datetime

        Label:
            size_hint_x: None
            width: 50
            font_size: 40
            font_name: 'Arial'
            color: 0.007, 0.266, 0.949, 1
            text: u'\u25ba'

<FileList>:
    grid: grid
    
    ScrollView:
        pos: root.pos
        size: root.size
        do_scroll_x: False
        GridLayout:
            id: grid
            cols: 1
            padding: 5, 5, 0, 0
            spacing: 5, 5
            row_default_height: 55
            row_force_default: True
            height: len(self.children) * (self.row_default_height + self.spacing[0]) + 20
            size_hint_y: None

<VideoEditor>:
    player: player
    nav_sliders: nav_sliders
    
    BoxLayout:
        pos: root.pos
        size: root.size
        canvas:
            Color:
                rgba: 0, 1, 0, 0.7
            Rectangle:
                pos: root.pos
                size: root.size
        orientation: 'vertical'
        spacing: 5
        padding: 5, 5, 5, 5
        Previewer:
            id: player
            nav_sliders: nav_sliders
            state: 'play'
            ssize_hint_y: 0.8
        NavSliders:
            id: nav_sliders
            player: player
            size_hint_y: 0.1

        Label:
            size_hint_y: 0.1
            font_size: 20
            text: root.file.datetime if root.file is not None else 'null'

<JobStatuses>:
    canvas:
        Color:
            rgba: 0, 0, 1, 0.7
        Rectangle:
            pos: root.pos
            size: root.size

    Label:
        center_x: root.center_x
        center_y: root.center_y
        font_size: 20
        text: 'jobs'

<ShadowTrim>:
    file_list: file_list
    video_editor: video_editor
    
    BoxLayout:
        size: root.size
        orientation: 'horizontal'
        spacing: 5
        FileList:
            id: file_list
            size_hint_x: None
            width: 540
        BoxLayout:
            orientation: 'vertical'
            spacing: 5
            VideoEditor:
                id: video_editor
                size_hint_y: None
                height: 890
            JobStatuses:


